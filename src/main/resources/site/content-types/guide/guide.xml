<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Guide</display-name>
  <super-type>doc</super-type>
  <is-abstract>false</is-abstract>
  <form>
    <input name="shortdescription" type="TextLine">
      <label>Short description</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="tags" type="Tag">
      <label>Tags</label>
      <occurrences minimum="0" maximum="0"/>
    </input>
    <input name="image" type="ImageSelector">
      <label>Teaser image</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="repository" type="TextLine">
      <label>Repository</label>
      <occurrences minimum="0" maximum="1"/>
      <help-text>Github url to clone a repo</help-text>
      <config>
        <regexp>^(https://github.com/).*?</regexp>
      </config>
    </input>
    <input name="html" type="HtmlArea">
      <label>HTML</label>
    </input>
  </form>
</content-type>