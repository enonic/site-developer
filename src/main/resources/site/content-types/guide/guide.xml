<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Guide</display-name>
  <super-type>base:structured</super-type>
  <is-abstract>false</is-abstract>
  <form>
    <input name="shortdescription" type="TextLine">
      <label>Short description</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="key" type="TextLine">
      <label>Key</label>
      <occurrences minimum="0" maximum="1"/>>
    </input>
    <input name="category" type="ContentSelector">
      <label>Category</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <relationship-type>system:reference</relationship-type>
        <allow-content-type>category</allow-content-type>
        <allowPath>${site}/*</allowPath>
      </config>
    </input>
    <input name="tags" type="Tag">
      <label>Tags</label>
      <occurrences minimum="0" maximum="0"/>
    </input>
    <input name="html" type="HtmlArea">
      <label>HTML</label>
    </input>
    <input name="baseUrl" type="TextLine">
      <label>Base URL</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </form>
</content-type>