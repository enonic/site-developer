<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Starter</display-name>
    <super-type>base:structured</super-type>
    <form>
        <inline mixin="software-basic"/>
        <inline mixin="software-license"/>
        <input type="TextLine" name="gitUrl">
            <label>Git URL</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <field-set name="versions">
            <label>Versions</label>
            <items>
                <item-set name="version">
                    <label>Version</label>
                    <items>
                        <input type="TextLine" name="versionNumber">
                            <label>Version number</label>
                            <occurrences minimum="1" maximum="1"/>
                            <config>
                                <regexp>^[0-9]+\.[0-9]+\.[0-9]+$</regexp>
                            </config>
                        </input>
                        <input name="versionDate" type="Date">
                            <label>Version date</label>
                            <occurrences minimum="1" maximum="1"/>
                        </input>
                        <input name="supportedVersions" type="Tag">
                            <label>Supported versions (min per major release)</label>
                            <immutable>false</immutable>
                            <indexed>false</indexed>
                            <occurrences minimum="1" maximum="20"/>
                        </input>
                        <input type="TextLine" name="changelogEntry">
                            <label>Changelog entry</label>
                            <occurrences minimum="1" maximum="0"/>
                        </input>
                        <input type="TextLine" name="gitTag">
                            <label>Git Tag</label>
                            <occurrences minimum="1" maximum="1"/>
                        </input>
                    </items>
                    <immutable>false</immutable>
                    <occurrences minimum="1" maximum="0"/>
                </item-set>
            </items>
        </field-set>
    </form>
</content-type>