<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Vendor</display-name>
    <super-type>base:structured</super-type>
    <form>
        <field-set name="basic">
            <label>Basic info</label>
            <items>
                <input type="TextLine" name="url">
                    <label>Web URL</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="ImageSelector" name="icon">
                    <label>Icon</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="HtmlArea" name="details">
                    <label>Details</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="TextLine" name="repoUrl">
                    <label>Repo URL</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>