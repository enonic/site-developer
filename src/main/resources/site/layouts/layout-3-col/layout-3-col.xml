<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<layout>
  <display-name>3 column layout</display-name>
  <form>
    <item-set name="bgColor">
      <label>Background color</label>
      <items>
        <mixin name="theme-color-picker"/>
      </items>
      <immutable>false</immutable>
      <occurrences minimum="0" maximum="1"/>
    </item-set>
    <input type="Checkbox" name="paddingTop">
      <label>Top padding</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="Checkbox" name="oneColMobile">
      <label>1-column on mobile</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </form>
  <regions>
    <region name="left"/>
    <region name="middle"/>
    <region name="right"/>
  </regions>
</layout>
