<?xml version="1.0" encoding="UTF-8"?>
<mixin>
  <display-name>Software basic</display-name>
  <items>
    <field-set name="basic">
      <label>Basic info</label>
      <items>
        <input type="TextLine" name="shortDescription">
          <label>Short description</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="AttachmentUploader" name="icon">
          <label>Icon</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="TextArea" name="details">
          <label>Details</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="vendor" type="ContentSelector">
          <label>Vendor</label>
          <occurrences minimum="1" maximum="1"/>
          <config>
            <relationship-type>system:parent</relationship-type>
            <allow-content-type>vendor</allow-content-type>
          </config>
        </input>
        <input name="documentationUrl" type="TextLine">
          <label>Documentation URL</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </field-set>
    <field-set name="Screenshots">
      <label>Screenshots</label>
      <items>
        <item-set name="screenshots">
          <label>Screenshot</label>
          <items>
            <input type="ImageSelector" name="img">
              <label>Image</label>
              <occurrences minimum="0" maximum="1"/>
            </input>
            <input type="TextLine" name="label">
              <label>Label</label>
              <occurrences minimum="0" maximum="1"/>
            </input>
          </items>
          <immutable>false</immutable>
          <occurrences minimum="0" maximum="10"/>
        </item-set>
      </items>
    </field-set>
    <field-set name="Video">
      <label>Video</label>
      <items>
        <input type="TextLine" name="videoTitle">
          <label>Title</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="TextLine" name="videoID">
          <label>Video ID</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="ImageSelector" name="videoScreenshot">
          <label>Screenshot</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </field-set>
  </items>
</mixin>