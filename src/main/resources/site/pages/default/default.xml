<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<page>
  <display-name>Default</display-name>
  <config>
    <input name="pageColor" type="RadioButton">
      <label>Page color</label>
      <help-text>Sets background color for entire page</help-text>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="white">White</option>
        <option value="black">Black</option>
      </config>
      <default>white</default>
    </input>
    <input name="headerType" type="RadioButton">
      <label>Header type</label>
      <help-text>Layered will layer the header on top of (in front of) the first part</help-text>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="default">Default</option>
        <option value="layered">Layered</option>
        <option value="hidden">Hidden</option>
        <option value="floating">Floating</option>
      </config>
    </input>
    <input name="headerInverted" type="CheckBox">
      <label>Invert header color</label>
      <help-text>Use color opposite to the background</help-text>
      <occurrences minimum="0" maximum="1"/>
      <default>checked</default>
    </input>
  </config>
  <regions>
    <region name="main"/>
  </regions>
</page>
