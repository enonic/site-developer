<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
    <display-name>Featured listings</display-name>
    <config>
        <input type="TextLine" name="heading">
            <label>Heading</label>
            <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="ContentSelector" name="viewAllPage">
            <label>View all page</label>
            <immutable>false</immutable>
            <indexed>true</indexed>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <relationship-type>system:reference</relationship-type>
                <allow-content-type>landing-page</allow-content-type>
            </config>
        </input>
        <input type="ContentSelector" name="featuredContent">
            <label>Featured content</label>
            <immutable>false</immutable>
            <indexed>true</indexed>
            <occurrences minimum="0" maximum="4"/>
            <config>
                <relationship-type>system:reference</relationship-type>
                <allow-content-type>application</allow-content-type>
                <allow-content-type>library</allow-content-type>
                <allow-content-type>starter</allow-content-type>
            </config>
        </input>
    </config>
</part>