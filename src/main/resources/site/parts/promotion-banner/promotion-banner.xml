<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
    <display-name>Promotion banner</display-name>
    <config>
        <item-set name="banner">
            <label>Banner</label>
            <items>
                <input name="image" type="ContentSelector">
                    <label>Image</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <allow-content-type>media:vector</allow-content-type>
                    </config>
                </input>
                <input name="imageMobile" type="ContentSelector">
                    <label>Image (mobile)</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <allow-content-type>media:vector</allow-content-type>
                    </config>
                </input>
                <input name="software" type="ContentSelector">
                    <label>Software</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <relationship-type>system:reference</relationship-type>
                        <allow-content-type>application</allow-content-type>
                        <allow-content-type>library</allow-content-type>
                        <allow-content-type>starter</allow-content-type>
                    </config>
                </input>
            </items>
            <immutable>false</immutable>
            <occurrences minimum="1" maximum="5"/>
        </item-set>
    </config>
</part>